# -*- mode:tcl -*-
#------------------------------------------------------------------------------
# make STNTUPLE in one go, without creating an intermediate file
#------------------------------------------------------------------------------
#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"

#include "Stntuple/fcl/prolog.fcl"
#include "murat/fcl/prolog.fcl"
#------------------------------------------------------------------------------
# local changes to global variables
#------------------------------------------------------------------------------
BEGIN_PROLOG
  bgHitFiles                          : @nil
#  g4ModuleLabel                       : "g4run"          # for normal generators
#  g4ModuleLabel                       : "detectorFilter" # for Ralf's cosmics
  G4_MODULE_LABEL                      : "detectorFilter" # for Andrei's datasets 
END_PROLOG

#include "murat/fcl/templates.fcl"

process_name : ReadHitsCaloAprVpidStnm

source       : { 
    module_type : RootInput
    #    fileNames   : [ {INPUT_DATA_FILE} ]
    #    fileNames : ["/mu2e/data/tdr/beam/g4s4p5/tdr.beam.g4s4.conversion.1504a.15729672/good/00000/dsStopsToHitsConversion.root"]
    #    maxEvents   : 100
    inputCommands : ['keep *_*_*_*'
    #		     , 'drop *_muonTimeMap_*_*'
    #		     , 'drop *_protonTimeMap_*_*'
    #		     , 'drop mu2eStrawDigis_*_*_*'
    #		     , 'drop mu2eStrawHits_*_*_*'
    #		     , 'drop *_CaloReadoutHitsMaker_*_*'
    #		     , 'drop *_CaloCrystalHitsMaker_*_*'
    # Uncomment the above lines to reduce file size.
		    ]
}

outputs: { @table::murat.outputs }

physics: { 
    producers: {
	@table::murat.producers
    }
	
    filters : { @table::murat.filters 
	InitStntuple   : { @table::murat.filters.InitStntuple 
	    histFileName           : "read_hits_calo_apr_vpid_stnm.stn" 
	}

 	StntupleMaker6  : { @table::murat.filters.StntupleMaker6
	    g4ModuleLabel : @local::G4_MODULE_LABEL
	    KalDiag       : { @table::murat.filters.StntupleMaker6.KalDiag 
		MCStepsLabel     : @local::G4_MODULE_LABEL
		SimParticleLabel : @local::G4_MODULE_LABEL
	    }
	}
    }

     p1 : [ @sequence::murat.digis, 
	    @sequence::murat.cal_reco,
	    @sequence::murat.dem_reco, 
	    @sequence::murat.dmm_reco,
	    @sequence::murat.uem_reco,
	    @sequence::murat.umm_reco,
	    @sequence::murat.uep_reco,   # upstream positive particles can also be reconstructed as DEM
	    @sequence::murat.ump_reco,
	    @sequence::murat.stnmaker6
	   ]

    out : [ ]
#------------------------------------------------------------------------------
#  trigger_paths and end_paths are reserved tables
#------------------------------------------------------------------------------
    trigger_paths : [ p1  ]
    end_paths     : [ out ]
}

#
# can use path names specified in 'physics.' context w/o prefixing
#

services.TFileService.fileName                      : "read_hits_calo_apr_vpid_stnm.hist"
#------------------------------------------------------------------------------
# uncomment the next 2 lines if you want the DST file to be written out
#-----------------------------------------------------------------------------
