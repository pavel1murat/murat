# -*- mode:tcl -*-
#------------------------------------------------------------------------------
# read input file, make STNTUPLE without creating an intermediate file
# to write a DST output file, modify the 'physics.out' line
#------------------------------------------------------------------------------
#include "Stntuple/fcl/templates.fcl"

process_name : TrkPatRecRecoStnmaker

source : {
    module_type : RootInput   #  EmptyEvent
    maxEvents   : -1
}

services.user.GeometryService.inputFile : "murat/test/geom_01_qgsp_bert.txt"

physics.producers.TrkPatRec.KalFit.ambiguityStrategy : [ 0  , 0  , 4  , 4   , 4    , 4   , 4  , 4  , 4   ]
physics.producers.TrkPatRec.KalFit.hiterr            : [ 5.0, 1.5, 0.5, 0.25, 0.125, 0.05, 0.0, 0.0, 0.0 ]
physics.producers.TrkPatRec.KalFit.t0Tolerance       : [ 2.0, 1.0, 1.0, 1.0 , 0.5  , 0.5 , 0.2, 0.2, 0.1 ]

physics.trigger_paths                                : [ trkpatrec_reco_stnmaker ]
outputs.detectorOutput.SelectEvents : { SelectEvents : [ trkpatrec_reco_stnmaker ] }

physics.filters.StntupleMaker: { @table::StntupleMaker
    generatorModuleLabel : "generate" 
    trackBlockName       : [ "TrackBlock" ]
}

# physics.out : [ detectorOutput ]
physics.out : [ ]
#------------------------------------------------------------------------------
# output files - make sure they all have the same name stub
#------------------------------------------------------------------------------
services.TFileService.fileName                     : "trkpatrec_reco_stnmaker.hist"
physics.filters.InitStntuple.histFileName          : "trkpatrec_reco_stnmaker.stn" 
outputs.detectorOutput.fileName                    : "trkpatrec_reco_stnmaker.art"
