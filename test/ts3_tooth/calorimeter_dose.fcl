#include "Stntuple/fcl/templates.fcl"

process_name : CalorimeterDose

source       : { 
    module_type : RootInput
}

physics: { 
    analyzers : {
	calorimeterDose        : { 
	    module_type            : CalorimeterDose
	    diagLevel              : 0
	    addCaloInfo            : 1
	    addTrackerInfo         : 1
	    crystalDensity         : 4.51 #g/cm3
	    zCrystalStep           : 10   # mm
	    g4ModuleLabel          : @local::G4_MODULE_LABEL
	    generatorModuleLabel   : generate
	}
    }

    out: [calorimeterDose]
    p2 : []

    trigger_paths : [ p2  ]
    end_paths     : [ out ]
}

