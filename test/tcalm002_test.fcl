#include "fcl/minimalMessageService.fcl"
#include "fcl/standardProducers.fcl"
#include "fcl/standardServices.fcl"

process_name : Exercise02

source : {
  module_type : RootInput
  fileNames   : [ "/grid/fermiapp/mu2e/DataFiles/ExampleDataFiles/Workbook/conversionOnly_01_data.root" ]
  maxEvents   : 10000000
}

services : {
  message      : @local::default_message
  TFileService : { fileName : "{DATASET}.trkpatrec.hist"}

  user : {
    GeometryService        : { inputFile      : "Mu2eG4/test/geom_01.txt"            }
    ConditionsService      : { conditionsfile : "Mu2eG4/test/conditions_01.txt"      }
    GlobalConstantsService : { inputFile      : "Mu2eG4/test/globalConstants_01.txt" }
  }

}

physics : {

  producers : {

    MakeStereoHits : @local::MakeStereoHits
    FlagStrawHits  : @local::FlagStrawHits
    FlagBkgHits    : @local::FlagBkgHits


     TrkPatRec1 : @local::TrkPatRecDownstreameMinus
#    trkPatRec2 : @local::TrkPatRecUpstreamePlus
#    trkPatRec3 : @local::TrkPatRecDownstreammuMinus
#    trkPatRec4 : @local::TrkPatRecUpstreammuPlus

     makeCaloCluster: {
	 module_type           : MakeCaloCluster
	 diagLevel             : 0
	 generatorModuleLabel   : generate
	 caloCrystalModuleLabel : CaloCrystalHitsMaker1
	 g4ModuleLabel          : g4run1
	 #caloReadoutModuleLabel: CaloReadoutHitsMaker
	 caloClusterAlgorithm   : closest
	 caloClusterSeeding     : energy
	 #     caloClusterSeeding    : time
	 deltaTime              : 10.0 #ns
	 nCryPerCrystal         : 1
	 EnoiseCut              : 0.00 #MeV
	 EclusterCut            : 0.00 #MeV  
	 maxFullPrint           : 201
     }

      trkExtrapol : {
	  module_type       : TrkExtrapol
	  fitterModuleLabel : TrkPatRec1
	  diagLevel         : 3
	  maxNumberStoresPoints : 1
	  # MC truth finder, analyzer configuration
	  KalFitMC : {
	  }        
      }

      caloMatching : {
	  module_type                  : CaloMatching
	  fitterModuleLabel            : TrkPatRec1
	  trkToCaloExtrapolModuleLabel : trkExtrapol
	  caloClusterModuleLabel       : makeCaloCluster
	  diagLevel                    : 1
	  outPutNtup                   : 0
	  caloClusterAlgorithm         : closest
	  caloClusterSeeding           : energy
      }

    PidDem : {
	module_type       : ParticleID
	fitterModuleLabel : TrkPatRec1
	fitparticle       : 11
	fitdirection      : 0
	verbosity         : 0
	diagLevel         : 1 
	doDisplay         : false
    }
      tcalm002 : { 
	  module_type     : TCalm002

	  strawHitMaker     : makeSH
	  trkPatRecDem      : TrkPatRec1
	  trkExtrapol       : trkExtrapol
	  trkCalMatch       : caloMatching
	  pidDem            : PidDem

	  histFileName    : "{DATASET}.{JOB}.hist"
#	  minTActive      : env{MIN_T_ACTIVE}
	  interactiveMode : 1
	  debugBits       : { }
      }
  }
  
  analyzers : {
  }
  
  #  p1 : [ trkPatRec, trkPatRec2, trkPatRec3, trkPatRec4 ]
  p1 : [ 
#         makeCaloCluster, 
	 MakeStereoHits, FlagStrawHits, FlagBkgHits, 
	 TrkPatRec1, 
	 trkExtrapol, caloMatching, 
	 pidDem,
	 tcalm002 
	]

  e1 : [ ]

  trigger_paths  : [p1]
  #  trigger_paths  : []
  end_paths      : [e1]
  
}


outputs: {
  outfile : {
    module_type    : RootOutput
    fileName       : "AAAAAAAAAA.tcalm002.root"
    SelectEvents  : { SelectEvents: [ ] }
    outputCommands : ['keep *_*_*_*'
#                   , 'drop mu2ePointTrajectoryMapVector_*_*_*'
#                   , 'drop mu2eSimParticles_*_*_*'
# Uncomment the above line to reduce file size.
                     ]  
  }
}


physics.producers.MakeStereoHits.StrawHitCollectionLabel : makeSH1
physics.producers.FlagStrawHits.StrawHitCollectionLabel  : makeSH1
physics.producers.FlagBkgHits.StrawHitCollectionLabel    : makeSH1

physics.producers.TrkPatRec1.StrawHitCollectionLabel  : makeSH1

