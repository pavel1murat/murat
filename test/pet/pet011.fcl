# -*- mode: tcl -*-
# PET simulation : 32 5x5 crystals ; full size simplified brain phantom, water
# 1 decay per event
# readout window: 1024/5 ns, doesnt matter

#include "minimalMessageService.fcl"
#include "standardProducers.fcl"
#include "standardServices.fcl"
#include "murat/test/pet/petProducers.fcl"

process_name: pet006
#------------------------------------------------------------------------------
# input and output
#------------------------------------------------------------------------------
source: {
    module_type : EmptyEvent
    maxEvents   : 20
    firstRun    : 1
}

outputs: {
    outfile : {
	module_type    : RootOutput
	fileName       : "pet011.root"
	fastCloning    : false
	outputCommands : [ "keep *_*_*_*"
			   #			   ,"drop mu2e::*_*_*_CosmicFilter"
#			   ,"drop mu2e::*_*_*_aaaa"
			  ]
    }
}
#------------------------------------------------------------------------------
# services
#------------------------------------------------------------------------------
services: {
    message: @local::default_message

    scheduler: { defaultExceptions : false }

    TFileService          : { fileName : "pet011.hist" }
    RandomNumberGenerator : { }

    user : {
        PetGeometryService     : { inputFile      : "murat/test/pet/geom_pet011.txt" }
        ConditionsService      : { conditionsfile : "Mu2eG4/test/conditions_01.txt"  }
        GlobalConstantsService : { inputFile      : "Mu2eG4/test/globalConstants_01.txt" }
        PetG4Helper            : { }
        SeedService            : @local::automaticSeeds
    }
}
#------------------------------------------------------------------------------
# modules
#------------------------------------------------------------------------------
physics: {
    producers: {
	PetGen                : @local::PetGen
	PetG4                 : @local::PetG4
	PetMakeCaloReadoutHits: @local::PetMakeCaloReadoutHits
	PetMakeCaloCrystalHits: @local::PetMakeCaloCrystalHits
	randomsaver           : @local::randomsaver
    }

    filters: {
    }

#     analyzers: {
#         eventdisplay: {
# 	    module_type     : EventDisplay
# 	    g4ModuleLabel   : "g4run1"
# 	}
#     }
#------------------------------------------------------------------------------
# paths
#------------------------------------------------------------------------------
    p1 : [  
	  PetGen, 
	  PetG4, 
	  PetMakeCaloReadoutHits, 
	  PetMakeCaloCrystalHits, 
	  randomsaver
	 ]

    e1 : [ # eventdisplay 
	  outfile
	  # , checkhits 
	  # ,readStrawHits
	 ]

    trigger_paths  : [p1]
    end_paths      : [e1]
}
#------------------------------------------------------------------------------
# redefinitions
#------------------------------------------------------------------------------
// Initialze seeding of random engines: do not put these lines in base .fcl files for grid jobs.
services.user.SeedService.baseSeed         :  0
services.user.SeedService.maxUniqueEngines :  20
#------------------------------------------------------------------------------
# decays - everything in the brain phantom (head fraction 1.1), 1 event per readout
#------------------------------------------------------------------------------
physics.producers.PetGen.brainPhantomGun.use          : true
physics.producers.PetGen.brainPhantomGun.dose         : -1.
physics.producers.PetGen.brainPhantomGun.nMean        : -1.
physics.producers.PetGen.brainPhantomGun.headFraction : 1.1
#------------------------------------------------------------------------------
# end
#------------------------------------------------------------------------------
