# -*- mode:tcl -*-
#------------------------------------------------------------------------------
# generate conversion electrons
# make STNTUPLE in one go, without creating an intermediate file
# to write a DST output file, uncomment the 'physics.out' line
#------------------------------------------------------------------------------
#include "Stntuple/fcl/templates.fcl"

process_name : CEHits

services.user.GeometryService.inputFile : "murat/geom/geom_01_qgsp_bert.txt"

physics.producers.generate : { @table::StoppedMuonConversionGun }

physics.trigger_paths               : [ gen_hits]
physics.out                         : [ detectorOutput ]
# physics.out                         : [ ]
outputs.detectorOutput.SelectEvents : { SelectEvents : [ gen_hits ] }

services.TFileService.fileName            : "ce_gen_hits.hist"
physics.filters.InitStntuple.histFileName : "ce_gen_hits.stn" 
outputs.detectorOutput.fileName           : "ce_gen_hits.art"
