#include "fcl/minimalMessageService.fcl"
#include "fcl/standardProducers.fcl"
#include "fcl/standardServices.fcl"

#include "Stntuple/fcl/prolog.fcl"
#include "murat/fcl/prolog.fcl"

BEGIN_PROLOG
#  meanBackground                      : -1        # fixed at 1
bgHitFiles : ["/pnfs/mu2e/tape/phy-sim/sim/mu2e/cd3-detmix-cut/v566b/art/00/90/sim.mu2e.cd3-detmix-cut.v566b.000004_00000341.art"]
  TrackRecoCheck_trkPatRecModuleLabel : MergePatRec
  G4_MODULE_LABEL                     : "g4run"          # for normal generators and Ralf's cosmics
#  G4_MODULE_LABEL                     : "detectorFilter" # for Andrei's datasets 
END_PROLOG

#include "murat/fcl/templates.fcl"

services : {
    message               : @local::default_message
    TFileService          : { fileName : "make_straw_hits.root" }
    RandomNumberGenerator : { }
    #   Timing                : { }
    GeometryService        : { inputFile      : "Mu2eG4/geom/geom_common.txt"      }
    ConditionsService      : { conditionsfile : "Mu2eG4/test/conditions_01.txt"        }
    GlobalConstantsService : { inputFile      : "Mu2eG4/test/globalConstants_01.txt"   }
    BTrkHelper             : @local::BTrkHelperDefault
    G4Helper               : { }
    SeedService            : { @table::automaticSeeds
	baseSeed         :  0
	maxUniqueEngines :  20
    }
    
    TimeTracker : {
	printSummary : true
	dbOutput : {
	    filename  : ""
	    overwrite : false
	}
    }
}

services.scheduler.wantSummary     : true

process_name : CalPatRecTrigger

source       : { 
    module_type   : RootInput 
    inputCommands : ['keep *_*_*_*'
#		     , 'drop *_makeSD_*_*'
		     , 'drop *_makeSH_*_*'
		    ]
}

producers    : { @table::murat.producers }
outputs      : { @table::murat.outputs   }
filters      : { @table::murat.filters   }
paths        : { @table::murat.paths     }

physics: { 
    producers : { @table::producers }
    filters   : { @table::filters   }

    analyzers : { }

    p1: [ PrefetchData, makeSH ]
    p2: [ makeSD, makeSH ]

    trigger_paths : [ p1 ]
    out           : []
    end_paths     : [ out ]
}
#------------------------------------------------------------------------------
# don't fetch dropped collections
#------------------------------------------------------------------------------
physics.producers.PrefetchData.fetchStrawHits        : 0
physics.producers.PrefetchData.fetchStrawHitPositions: 0
physics.producers.PrefetchData.fetchStrawHitFlags    : 0
